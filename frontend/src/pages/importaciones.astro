          </div>

          <!-- Year Filter -->
          <div class="space-y-1">
            <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider">A√±o</label>
            <select id="year-filter" class="block w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition appearance-none bg-no-repeat bg-right pr-8" style="background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%236B7280%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-5%200-9.3%201.8-12.9%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2012.9l128%20127.9c3.6%203.6%207.8%205.4%2012.8%205.4s9.2-1.8%2012.8-5.4L287%2095c3.5-3.5%205.4-7.8%205.4-12.8%200-5-1.9-9.2-5.5-12.8z%22%2F%3E%3C%2Fsvg%3E'); background-size: 10px; background-position: right 12px center;">
              <option value="">Cualquier a√±o</option>
            </select>
          </div>

          <!-- Sort -->
          <div class="space-y-1">
            <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider">Ordenar por</label>
            <select id="sort-filter" class="block w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition appearance-none bg-no-repeat bg-right pr-8" style="background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%236B7280%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-5%200-9.3%201.8-12.9%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2012.9l128%20127.9c3.6%203.6%207.8%205.4%2012.8%205.4s9.2-1.8%2012.8-5.4L287%2095c3.5-3.5%205.4-7.8%205.4-12.8%200-5-1.9-9.2-5.5-12.8z%22%2F%3E%3C%2Fsvg%3E'); background-size: 10px; background-position: right 12px center;">
              <option value="newest">M√°s recientes</option>
              <option value="oldest">M√°s antiguos</option>
              <option value="price-low">Precio m√°s bajo</option>
              <option value="price-high">Precio m√°s alto</option>
              <option value="mileage-low">Menor kilometraje</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Vehicles Grid -->
      <div id="vehicles-grid" class="hidden">
        <!-- Stats Bar -->
        <div class="bg-white rounded-lg shadow mb-6 p-4">
          <div class="flex items-center justify-between flex-wrap gap-4">
            <div class="flex items-center space-x-2">
              <span class="text-sm text-gray-600">Veh√≠culos disponibles:</span>
              <span id="vehicle-count" class="text-2xl font-bold text-blue-600">0</span>
            </div>
            <div class="flex items-center space-x-2 text-sm text-gray-600">
              <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Cotizaci√≥n gratuita</span>
            </div>
          </div>
        </div>

        <!-- Grid -->
        <div id="vehicles-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Vehicle cards will be inserted here -->
        </div>
      </div>
    </div>
  </div>

  <!-- Modal de Cotizaci√≥n -->
  <div id="quote-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-lg bg-white">
      <div class="mt-3">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Solicitar Cotizaci√≥n</h3>
        
        <div id="modal-vehicle-info" class="mb-4 p-3 bg-gray-50 rounded-lg">
          <!-- Vehicle info will be inserted here -->
        </div>

        <form id="quote-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Comentarios o Preguntas</label>
            <textarea 
              id="quote-comments" 
              rows="4" 
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
              placeholder="Ej: ¬øIncluye el costo de env√≠o? ¬øCu√°nto tiempo tarda la importaci√≥n?"
            ></textarea>
          </div>

          <div class="flex space-x-3">
            <button
              type="button"
              onclick="closeQuoteModal()"
              class="flex-1 bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded-lg hover:bg-gray-300 transition"
            >
              Cancelar
            </button>
            <button
              type="submit"
              class="flex-1 bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition"
            >
              Enviar Solicitud
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { supabase } from "../utils/supabase";

  let selectedVehicle: any = null;

  // Verificar autenticaci√≥n
  async function checkAuth() {
    const { data: { session } } = await supabase.auth.getSession();
    
    if (!session) {
      window.location.href = "/login";
      return null;
    }
    return session;
  }

  // Formatear precio
  function formatPrice(price: string): string {
    if (!price || price === '0') return 'Consultar';
    return `$${price} USD`;
  }

  // Abrir modal de cotizaci√≥n
  (window as any).openQuoteModal = function(vehicleDataStr: string) {
    try {
      selectedVehicle = JSON.parse(vehicleDataStr);
      console.log('Selected vehicle:', selectedVehicle);
      
      const modal = document.getElementById('quote-modal');
      const vehicleInfo = document.getElementById('modal-vehicle-info');
      
      if (vehicleInfo) {
        vehicleInfo.innerHTML = `
          <div class="flex items-start space-x-3">
            <div class="relative w-20 h-20 bg-gray-200 rounded-lg overflow-hidden flex-shrink-0">
              <img src="${selectedVehicle.imageUrl || ''}" alt="${selectedVehicle.title || 'Veh√≠culo'}" 
                   class="w-full h-full object-cover" 
                   onerror="this.style.display='none'; this.parentElement.querySelector('.placeholder-icon-small').style.display='flex';" />
              <div class="placeholder-icon-small hidden absolute inset-0 bg-gray-300 items-center justify-center">
                <svg class="h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <h4 class="font-semibold text-gray-900">${selectedVehicle.title || 'Sin t√≠tulo'}</h4>
              <p class="text-sm text-gray-600">VIN: ${selectedVehicle.vin || 'N/A'}</p>
              <p class="text-sm text-gray-600">${selectedVehicle.odometer || 'N/A'} mi</p>
              <p class="text-lg font-bold text-blue-600 mt-1">${formatPrice(selectedVehicle.price || '0')}</p>
            </div>
          </div>
        `;
      }
      
      if (modal) modal.classList.remove('hidden');
    } catch (error) {
      console.error('Error parsing vehicle data:', error);
      alert('Error al abrir el modal. Por favor intenta de nuevo.');
    }
  };

  // Cerrar modal
  (window as any).closeQuoteModal = function() {
    const modal = document.getElementById('quote-modal');
    if (modal) modal.classList.add('hidden');
    selectedVehicle = null;
    
    const form = document.getElementById('quote-form') as HTMLFormElement;
    if (form) form.reset();
  };

  // Enviar solicitud de cotizaci√≥n
  async function submitQuoteRequest(e: Event) {
    e.preventDefault();
    
    if (!selectedVehicle) return;

    const session = await checkAuth();
    if (!session) return;

    const commentsEl = document.getElementById('quote-comments') as HTMLTextAreaElement;
    const comments = commentsEl?.value || '';

    try {
      const submitBtn = (e.target as HTMLFormElement).querySelector('button[type="submit"]') as HTMLButtonElement;
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Enviando...';
      }

      // Guardar la solicitud de cotizaci√≥n en Supabase
      const { error } = await supabase
        .from('cotizaciones')
        .insert({
          user_id: session.user.id,
          vehicle_info: {
            tipo: 'importacion',
            iaai_id: selectedVehicle.id,
            titulo: selectedVehicle.title,
            vin: selectedVehicle.vin,
            a√±o: selectedVehicle.year,
            marca: selectedVehicle.make,
            modelo: selectedVehicle.model,
            kilometraje: selectedVehicle.odometer,
            condicion: selectedVehicle.condition,
            precio_subasta: selectedVehicle.price,
            ubicacion: selectedVehicle.location,
            url_iaai: selectedVehicle.detailUrl,
            imagen: selectedVehicle.imageUrl
          },
          comentarios: comments,
          estado: 'pendiente'
        });

      if (error) throw error;

      // Mostrar mensaje de √©xito
      alert('‚úÖ ¬°Solicitud enviada exitosamente!\n\nNuestro equipo revisar√° tu solicitud y te contactar√° pronto con una cotizaci√≥n detallada.');
      
      (window as any).closeQuoteModal();
      
    } catch (error: any) {
      console.error('Error al enviar cotizaci√≥n:', error);
      alert('‚ùå Error al enviar la solicitud. Por favor intenta de nuevo.');
      
      const submitBtn = document.querySelector('#quote-form button[type="submit"]') as HTMLButtonElement;
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Enviar Solicitud';
      }
    }
  }

  // Crear card de veh√≠culo
  function createVehicleCard(vehicle: any): string {
    const statusColor = vehicle.condition === 'Run & Drive' ? 'bg-green-100 text-green-800' : 
                       vehicle.condition === 'Starts' ? 'bg-yellow-100 text-yellow-800' : 
                       'bg-red-100 text-red-800';
    
    // Escapar comillas y caracteres especiales para JSON
    const safeVehicleData = {
      id: vehicle.id || '',
      title: vehicle.title || 'Sin t√≠tulo',
      vin: vehicle.vin || 'N/A',
      odometer: vehicle.odometer || 'N/A',
      price: vehicle.price || '0',
      imageUrl: vehicle.imageUrl || '',
      detailUrl: vehicle.detailUrl || '#'
    };
    
    const vehicleDataStr = JSON.stringify(safeVehicleData).replace(/'/g, "\\'");
    
    return `
      <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-300 border border-gray-100 group">
        <div class="relative h-56 bg-gray-200 overflow-hidden">
          <img 
            src="${vehicle.imageUrl || ''}" 
            alt="${vehicle.title || 'Veh√≠culo'}" 
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" 
            onerror="this.style.display='none'; this.parentElement.querySelector('.placeholder-icon').style.display='flex';" 
          />
          <div class="placeholder-icon hidden absolute inset-0 bg-gray-300 items-center justify-center">
            <svg class="h-20 w-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="absolute top-3 right-3 ${statusColor} px-3 py-1 rounded-full text-xs font-bold shadow-sm uppercase tracking-wider">
            ${vehicle.condition || 'Unknown'}
          </div>
          ${vehicle.price && vehicle.price !== '0' ? `
          <div class="absolute bottom-3 left-3 bg-blue-600 text-white px-4 py-1.5 rounded-lg text-lg font-black shadow-lg">
            ${formatPrice(vehicle.price)}
          </div>
          ` : ''}
        </div>

        <div class="p-5">
          <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 leading-tight h-14">${vehicle.title || 'Sin t√≠tulo'}</h3>

          <div class="space-y-2.5 text-sm mb-6">
            <div class="flex justify-between items-center text-gray-500">
              <span class="flex items-center"><svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg> Ubicaci√≥n</span>
              <span class="text-gray-900 font-medium text-right">${vehicle.location || 'N/A'}</span>
            </div>
            
            <div class="flex justify-between items-center text-gray-500">
              <span class="flex items-center"><svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg> VIN</span>
              <span class="font-mono text-blue-600 font-semibold bg-blue-50 px-1.5 py-0.5 rounded text-xs">${vehicle.vin || 'N/A'}</span>
            </div>
            
            <div class="flex justify-between items-center text-gray-500">
              <span class="flex items-center"><svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg> Kilometraje</span>
              <span class="font-bold text-gray-900">${vehicle.odometer ? vehicle.odometer + ' mi' : 'N/A'}</span>
            </div>

            ${vehicle.engine && vehicle.engine !== 'N/A' ? `
            <div class="flex justify-between items-center text-gray-500">
              <span class="flex items-center"><svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37a1.724 1.724 0 002.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg> Motor</span>
              <span class="text-gray-900 text-xs text-right font-medium">${vehicle.engine}</span>
            </div>
            ` : ''}

            ${vehicle.transmission && vehicle.transmission !== 'N/A' ? `
            <div class="flex justify-between items-center text-gray-500">
              <span class="flex items-center"><svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg> Transmisi√≥n</span>
              <span class="text-gray-900 text-xs text-right font-medium">${vehicle.transmission}</span>
            </div>
            ` : ''}
            
            <div class="flex justify-between items-center text-gray-500">
              <span class="flex items-center"><svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg> Subasta</span>
              <span class="text-blue-700 font-bold">${vehicle.auctionDate || 'TBD'}</span>
            </div>
          </div>

          <div class="grid grid-cols-5 gap-2">
            <button 
              onclick='openQuoteModal(${vehicleDataStr})'
              class="col-span-4 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-xl transition-all duration-200 flex items-center justify-center space-x-2 shadow-md hover:shadow-lg active:scale-95"
            >
              <span>Solicitar Cotizaci√≥n</span>
            </button>
            <a 
              href="${vehicle.detailUrl || '#'}" 
              target="_blank"
              class="col-span-1 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl flex items-center justify-center transition-colors shadow-sm"
              title="Ver en IAAI"
            >
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    `;
  }

  // --- L√≥gica de filtrado ---
  let allVehicles = [];

  function populateFilters(vehicles: any[]) {
    const makeFilter = document.getElementById('make-filter') as HTMLSelectElement;
    const yearFilter = document.getElementById('year-filter') as HTMLSelectElement;

    if (!makeFilter || !yearFilter) return;

    // Marcas √∫nicas
    const makes = [...new Set(vehicles.map(v => v.make))].filter(Boolean).sort();
    const currentMake = makeFilter.value;
    makeFilter.innerHTML = '<option value="">Todas las marcas</option>';
    makes.forEach(make => {
      const option = document.createElement('option');
      option.value = make;
      option.textContent = make;
      if (make === currentMake) option.selected = true;
      makeFilter.appendChild(option);
    });

    // A√±os √∫nicos
    const years = [...new Set(vehicles.map(v => v.year))].filter(y => y && y !== 'N/A').sort((a, b) => b.localeCompare(a));
    const currentYear = yearFilter.value;
    yearFilter.innerHTML = '<option value="">Cualquier a√±o</option>';
    years.forEach(year => {
      const option = document.createElement('option');
      option.value = year;
      option.textContent = year;
      if (year === currentYear) option.selected = true;
      yearFilter.appendChild(option);
    });
  }

  function applyFilters() {
    const searchTerm = (document.getElementById('search-input') as HTMLInputElement)?.value.toLowerCase() || '';
    const makeFilterValue = (document.getElementById('make-filter') as HTMLSelectElement)?.value || '';
    const yearFilterValue = (document.getElementById('year-filter') as HTMLSelectElement)?.value || '';
    const sortFilterValue = (document.getElementById('sort-filter') as HTMLSelectElement)?.value || 'newest';

    let filtered = allVehicles.filter(v => {
      const matchesSearch = v.title.toLowerCase().includes(searchTerm) || 
                            v.vin.toLowerCase().includes(searchTerm) ||
                            v.model.toLowerCase().includes(searchTerm);
      const matchesMake = !makeFilterValue || v.make === makeFilterValue;
      const matchesYear = !yearFilterValue || v.year === yearFilterValue;
      return matchesSearch && matchesMake && matchesYear;
    });

    // Ordenar
    filtered.sort((a, b) => {
      switch (sortFilterValue) {
        case 'newest': return b.year.localeCompare(a.year);
        case 'oldest': return a.year.localeCompare(b.year);
        case 'price-low': return parseFloat(a.price.replace(/,/g, '')) - parseFloat(b.price.replace(/,/g, ''));
        case 'price-high': return parseFloat(b.price.replace(/,/g, '')) - parseFloat(a.price.replace(/,/g, ''));
        case 'mileage-low': 
          const mileageA = parseInt(a.odometer.replace(/,/g, '')) || 0;
          const mileageB = parseInt(b.odometer.replace(/,/g, '')) || 0;
          return mileageA - mileageB;
        default: return 0;
      }
    });

    renderVehicles(filtered);
  }

  function renderVehicles(vehicles: any[]) {
    const containerEl = document.getElementById('vehicles-container');
    const countEl = document.getElementById('vehicle-count');
    
    if (countEl) countEl.textContent = vehicles.length.toString();
    
    if (containerEl) {
      if (vehicles.length > 0) {
        containerEl.innerHTML = '';
        vehicles.forEach(vehicle => {
          const cardHTML = createVehicleCard(vehicle);
          const cardElement = document.createElement('div');
          cardElement.innerHTML = cardHTML;
          containerEl.appendChild(cardElement.firstElementChild!);
        });
      } else {
        containerEl.innerHTML = `
          <div class="col-span-full text-center py-20 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200">
            <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="mt-4 text-xl font-bold text-gray-900">No hay veh√≠culos que coincidan</h3>
            <p class="mt-2 text-gray-500">Intenta ajustar tus filtros de b√∫squeda para encontrar lo que buscas.</p>
            <button onclick="document.getElementById('search-input').value=''; document.querySelectorAll('select').forEach(s => s.selectedIndex=0); applyFilters();" class="mt-6 text-blue-600 font-bold hover:underline">
              Limpiar todos los filtros
            </button>
          </div>
        `;
      }
    }
  }

  // Cargar veh√≠culos
  async function loadVehicles() {
    const session = await checkAuth();
    if (!session) return;

    const loadingEl = document.getElementById('loading');
    const errorEl = document.getElementById('error');
    const gridEl = document.getElementById('vehicles-grid');

    try {
      let apiUrl = '/api/importaciones';
      const response = await fetch(apiUrl, {
        method: 'GET',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'same-origin'
      });
      
      if (!response.ok) throw new Error(`Error ${response.status}: ${response.statusText}`);

      const data = await response.json();
      if (!data.success) throw new Error(data.message || 'Error al cargar veh√≠culos');

      if (loadingEl) loadingEl.classList.add('hidden');
      if (gridEl) gridEl.classList.remove('hidden');

      allVehicles = data.vehicles || [];
      
      populateFilters(allVehicles);
      renderVehicles(allVehicles);
      
    } catch (error: any) {
      console.error('Error al cargar veh√≠culos:', error);
      if (loadingEl) loadingEl.classList.add('hidden');
      if (errorEl) {
        errorEl.classList.remove('hidden');
        const errorMessageEl = document.getElementById('error-message');
        if (errorMessageEl) errorMessageEl.textContent = error.message;
      }
    }
  }

  // Event listeners
  document.getElementById('quote-form')?.addEventListener('submit', submitQuoteRequest);
  document.getElementById('search-input')?.addEventListener('input', applyFilters);
  document.getElementById('make-filter')?.addEventListener('change', applyFilters);
  document.getElementById('year-filter')?.addEventListener('change', applyFilters);
  document.getElementById('sort-filter')?.addEventListener('change', applyFilters);

  // Cerrar modal al hacer clic fuera de √©l
  document.getElementById('quote-modal')?.addEventListener('click', function(e) {
    if (e.target === this) (window as any).closeQuoteModal();
  });

  // Inicializar
  loadVehicles();
</script>

